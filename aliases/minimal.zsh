# Minimal mode aliases
# Clean, minimal set of aliases

# Basic file operations
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'

# Safety aliases
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# Directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias home='cd ~'

# Quick access
alias c='clear'
alias h='history'
alias j='jobs' 